{
  "info": {
    "name": "CleanTech API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"phone\": \"+25884XXXXXXX\",\n  \"password\": \"password123\",\n  \"role\": \"client\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+25884XXXXXXX\",\n  \"password\": \"password123\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Create Order (auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"domestico\",\n  \"quantityKg\": 30,\n  \"address\": \"Bairro X, Rua Y\",\n  \"lat\": 0,\n  \"lng\": 0,\n  \"distanceKm\": 3\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api","orders"] }
      }
    },
    {
      "name": "Init M-Pesa Payment (auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"amount\": 300,\n  \"phone\": \"+25884XXXXXXX\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/payments/mpesa/init", "host": ["{{baseUrl}}"], "path": ["api","payments","mpesa","init"] }
      }
    },
    {
      "name": "Simulate M-Pesa Callback",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"Body\": {\n    \"stkCallback\": {\n      \"MerchantRequestID\": \"MREQ_123\",\n      \"CheckoutRequestID\": \"CREQ_123\",\n      \"ResultCode\": 0,\n      \"ResultDesc\": \"The service request is processed successfully.\",\n      \"CallbackMetadata\": {\n        \"Item\": [\n          {\"Name\":\"Amount\",\"Value\":300},\n          {\"Name\":\"MpesaReceiptNumber\",\"Value\":\"ABC123\"},\n          {\"Name\":\"PhoneNumber\",\"Value\":\"+25884XXXXXXX\"}\n        ]\n      }\n    }\n  }\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/payments/mpesa/callback", "host": ["{{baseUrl}}"], "path": ["api","payments","mpesa","callback"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "token", "value": "" },
    { "key": "orderId", "value": "" }
  ]
}