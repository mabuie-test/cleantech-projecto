</LinearLayout>
<Button android:id="@+id/btnRegister" android:text="Registar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
<ProgressBar android:id="@+id/progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
</LinearLayout>
</ScrollView>
</layout>