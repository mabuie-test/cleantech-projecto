# Server
PORT=4000
ENV=development

# MongoDB (Atlas) - replace with your connection string
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/cleantech?retryWrites=true&w=majority

# JWT
JWT_SECRET=replace_with_a_strong_secret
JWT_EXPIRY=7d

# M-Pesa / Vodacom (provider agnostic)
MPESA_PROVIDER=vodacom_mz     # supported: vodacom_mz | safaricom | simulator
MPESA_API_URL=https://api.vm.co.mz           # example (change to actual from vodacom docs)
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SERVICE_PROVIDER_CODE=600000           # example service/provider code (replace)
MPESA_PASSKEY=your_passkey                   # if required for STK
MPESA_SHORTCODE=600000
MPESA_CALLBACK_URL=https://yourdomain.com/api/payments/mpesa/callback

# CORS / Frontend
FRONTEND_ORIGIN=http://localhost:3000

