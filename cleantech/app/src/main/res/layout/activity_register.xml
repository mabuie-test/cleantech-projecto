<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data/>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:padding="24dp">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
<TextView android:text="Registo" android:textSize="24sp" android:textStyle="bold" android:layout_marginTop="24dp"/>
<EditText android:id="@+id/etName" android:hint="Nome completo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
<EditText android:id="@+id/etPhone" android:hint="TelemÃ³vel" android:inputType="phone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
<EditText android:id="@+id/etPassword" android:hint="Senha" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
